@model IEnumerable<GestorEventos.Servicios.Entidades.ServiciosVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Servicios Disponibles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar nuevo servicio</a>
</p>
<table class="table table-striped table-bordered rounded">
    <thead class="thead-dark">
        <tr>
            <th>Servicio</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioServicio)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdServicio" class="btn btn-warning btn-sm rounded">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdServicio" class="btn btn-danger btn-sm rounded">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

