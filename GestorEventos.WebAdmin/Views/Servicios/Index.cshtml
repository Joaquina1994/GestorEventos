@model IEnumerable<GestorEventos.Servicios.Entidades.ServiciosVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Servicios Disponibles</h1>

<p>
    <a asp-action="Create">Agregar nuevo servicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <!--<th>
                @Html.DisplayNameFor(model => model.First().IdServicio)
            </th>-->
            <th>
                @Html.DisplayNameFor(model => model.First().Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PrecioServicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!--<td>
                    @Html.DisplayFor(modelItem => item.IdServicio)
                </td>-->
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioServicio)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdServicio }) |
                    <!--@Html.ActionLink("Details", "Details", new { id = item.IdServicio }) |-->
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdServicio })
                </td>
            </tr>
        }
    </tbody>
</table>
