@model GestorEventos.Servicios.Entidades.ServiciosVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Servicios</h1>

<h4>Agregar un nuevo servicio:</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" class="p-4 rounded shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input asp-for="IdServicio" class="form-control" type="hidden" value="0" />

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Nuevo Servicio</label>
                <input asp-for="Descripcion" class="form-control rounded" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioServicio" class="control-label">Precio</label>
                <input asp-for="PrecioServicio" class="form-control rounded" />
                <span asp-validation-for="PrecioServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary btn-block rounded" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary rounded">Volver a Servicios</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

