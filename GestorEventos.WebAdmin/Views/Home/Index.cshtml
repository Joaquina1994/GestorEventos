@{
    ViewData["Title"] = "Administrador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="display-4 mb-4">Despedidas de Solter@s</h1>
            <p class="lead">Bienvenido. Aca podes gestionar los servicios y eventos solicitados.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h5 class="card-title">Servicios</h5>
                    <p class="card-text">Administra los servicios disponibles para las despedidas de solter@s.</p>
                    <a href="@Url.Action("Index", "Servicios")" class="btn btn-primary rounded">Ver Servicios</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-body">
                    <h5 class="card-title">Eventos</h5>
                    <p class="card-text">Administra los eventos contratados para las despedidas de solter@s.</p>
                    <a href="@Url.Action("Index", "Eventos")" class="btn btn-primary rounded">Ver Eventos</a>
                </div>
            </div>
        </div>
    </div>
</div>

