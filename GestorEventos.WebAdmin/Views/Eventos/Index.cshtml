@model IEnumerable<GestorEventos.Servicios.Entidades.EventoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Eventos Contratados</h1>

<table class="table table-striped table-bordered rounded">
    <thead class="thead-dark">
        <tr>
            <th>Evento</th>
            <th>Fecha</th>
            <th>Cantidad de Personas</th>
            <th>Agasajado</th>
            <th>Solteros o Solteras?</th>
            <th>Usuario Registrado</th>
            <th>Estado</th>
            <th>Modificar Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.NombreEvento)</td>
            <td>@Html.DisplayFor(modelItem => item.FechaEvento)</td>
            <td>@Html.DisplayFor(modelItem => item.CantidadPersonas)</td>
            <td>@Html.DisplayFor(modelItem => item.NombrePersonaAgasajada)</td>
            <td>@Html.DisplayFor(modelItem => item.TipoEvento)</td>
            <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
            <td>@Html.DisplayFor(modelItem => item.EstadoEvento)</td>
            <td>
                
                
                
                <form asp-action="AprobarEvento" class="d-inline-block">
                    <input type="hidden" name="idEvento" value="@item.IdEvento" id="idEvento" />
                    <input type="submit" value="Aprobar" class="btn btn-success btn-sm rounded" />
                </form>

                <form asp-action="RechazarEvento" class="d-inline-block">
                    <input type="hidden" name="idEvento" value="@item.IdEvento" id="idEvento" />
                    <input type="submit" value="Rechazar" class="btn btn-danger btn-sm rounded" />
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

