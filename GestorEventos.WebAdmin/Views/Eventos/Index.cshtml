@model IEnumerable<GestorEventos.Servicios.Entidades.EventoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Eventos Contratados</h1>

<table class="table">
    <thead>
        <tr>
            <!--<th>
                @Html.DisplayNameFor(model => model.IdEvento)
            </th>-->
            <th>
                <label>Evento</label>
                
            </th>
            <th>
                <label>Fecha</label>
                
            </th>
            <th>
                <label>Cantidad de Personas</label>
               
            </th>
            <th>
                <label>Agasajado</label>
                
            </th>
            <th>
                <label>Solteros o Solteras?</label>
                
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.Visible)
            </th>-->
            <th>
                <label>Usuario Registrado</label>
                
            </th>
            <th>
                <label>Estado</label>
                
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.Borrado)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <!--<td>
                @Html.DisplayFor(modelItem => item.IdEvento)
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.NombreEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePersonaAgasajada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEvento)
            </td>
            <!--<td>
                @Html.DisplayFor(modelItem => item.Visible)
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.NombreUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoEvento)
            </td>
            <!--<td>
                @Html.DisplayFor(modelItem => item.Borrado)
            </td>-->
            <td>
                <!--@Html.ActionLink("Details", "Details", new {  id=item.IdEvento }) |-->
                    <form asp-action="AprobarEvento">
                        <input type="hidden" name="idEvento" value="@item.IdEvento" id="idEvento" />
                        <input type="submit" value="Aprobar" />
                    </form>


                    <form asp-action="RechazarEvento">
                        <input type="hidden" name="idEvento" value="@item.IdEvento" id="idEvento" />
                        <input type="submit" value="Rechazar" />
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
